<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="wrap_content">
<!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="6dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray">

            <TextView
                android:id="@+id/product_order_id"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="9dp"
                android:padding="10dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_order_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_order_id"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@+id/product_order_image"
                android:text="Hello this is a cart."
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/product_order_description"
                android:layout_width="224dp"
                android:layout_height="31dp"
                android:layout_below="@+id/product_order_name"
                android:layout_alignStart="@+id/product_order_name"
                android:layout_marginStart="-3dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/product_order_image"
                android:text="Hello this is a card"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/product_order_image"
                android:layout_width="139dp"
                android:layout_height="285dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:maxHeight="200dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/product_order_price"
                android:layout_width="228dp"
                android:layout_height="31dp"
                android:layout_below="@+id/product_order_description"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="0dp"
                android:text="Rs. 389"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_order_status"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_order_price"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:layout_toStartOf="@+id/product_order_image"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_order_date"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_order_status"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="13dp"
                android:layout_toStartOf="@+id/product_order_image"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_order_time"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_order_date"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/product_order_image"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/generate_barcode"
                android:layout_width="171dp"
                android:layout_height="65dp"
                android:layout_below="@+id/product_order_image"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="0dp"
                android:text="Generate QR Code" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
